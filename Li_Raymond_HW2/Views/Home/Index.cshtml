    <div class="container">
        <span class="text-danger">@ViewBag.ErrorMessage</span>
        <h2>Food Truck Checkout</h2>
        <div class="panel-body">
            <form asp-action="SubmitOrder" method="get">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label >Enter the customer code:</label>
                    <input type="text" name="customerCode" class="form-control" /><br />
                </div>
                <div class="form-group">
                    <label >Enter number of tacos:</label>
                    <input type="text" name="numberOfTacos" class="form-control" /><br />
                </div>
                <div class="form-group">
                    <label >Enter number of sandwiches:</label>
                    <input type="text" name="numberOfSandwiches" class="form-control" /><br />
                </div>
                <button type="Submit" class="btn btn-primary">Checkout</button>
            </form>
        </div>
    </div>